extends ../base/layout

block variables
  - const title = "Portfolio" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentPage = "main" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main
    section.hero
      .hero__bg.hero__bg--dark
        picture
          source(srcset='./img/content/hero-mob.jpg', media='(max-width: 768px)')
          +img("content", "hero", "jpg", 1440, 910, "My photo")
      .hero__bg.hero__bg--light
        picture
          source(srcset='./img/content/hero-light-mob.jpg', media='(max-width: 768px)')
          +img("content", "hero-light", "jpg", 1440, 910, "My photo")

      .container
        .hero__wrapper
          .hero__about-me
            h1.title.title--lg(data-i18="hero-title") Alexa Rise
            p.text(data-i18="hero-text") Save sincere emotions, romantic feelings and happy moments of&nbsp;life together with professional photographer Alexa Rise
            a(href="#" class="button button--link waves-effect" data-i18="hire") Hire me

    section.section.skills#skills
      .container
        h2.title.title--md
          span(data-i18="skills") Skills
        ul.skills__list
          li.skills__item
            .skill
              .skill__icon
                include ../../img/svg/icon-camera.svg
              p.skill__title(data-i18="skill-title-1") Digital photography
              p.text.skill__text(data-i18="skill-text-1") High-quality photos in the studio and on the nature
          li.skills__item
            .skill
              .skill__icon
                include ../../img/svg/icon-video.svg
              p.skill__title(data-i18="skill-title-2") Video shooting
              p.text.skill__text(data-i18="skill-text-2") Capture your moments so that they always stay with you
          li.skills__item
            .skill
              .skill__icon
                include ../../img/svg/icon-photo.svg
              p.skill__title(data-i18="skill-title-3") Retouch
              p.text.skill__text(data-i18="skill-text-3") I strive to make photography surpass reality
          li.skills__item
            .skill
              .skill__icon
                include ../../img/svg/icon-mic.svg
              p.skill__title(data-i18="skill-title-4") Audio
              p.text.skill__text(data-i18="skill-text-4") Professional sounds recording for video, advertising, portfolio

    section.section.portfolio#portfolio
      .container
        .portfolio__wrapper
          h2.title.title--md
            span(data-i18="portfolio") Portfolio
          ul.portfolio__filter(data-gallery-controls)
            li.portfolio__filter-item
              button(type="button" class="portfolio__button button waves-effect" data-season="winter" data-i18="winter" data-class-active) Winter
            li.portfolio__filter-item
              button(type="button" class="portfolio__button button waves-effect" data-season="spring" data-i18="spring" data-class-active) Spring
            li.portfolio__filter-item
              button(type="button" class="portfolio__button button waves-effect" data-season="summer" data-i18="summer" data-class-active) Summer
            li.portfolio__filter-item
              button(type="button" class="portfolio__button button waves-effect is-active" data-season="autumn" data-i18="autumn" data-class-active) Autumn

          ul.portfolio__gallery
            li.portfolio__gallery-item
              +img("content", "autumn-1", "jpg", 450, 560, "portfolio-photo-1")
            li.portfolio__gallery-item
              +img("content", "autumn-2", "jpg", 450, 560, "portfolio-photo-2")
            li.portfolio__gallery-item
              +img("content", "autumn-3", "jpg", 450, 560, "portfolio-photo-3")
            li.portfolio__gallery-item
              +img("content", "autumn-4", "jpg", 450, 560, "portfolio-photo-4")
            li.portfolio__gallery-item
              +img("content", "autumn-5", "jpg", 450, 560, "portfolio-photo-5")
            li.portfolio__gallery-item
              +img("content", "autumn-6", "jpg", 450, 560, "portfolio-photo-6")

    section.section.video#video
      .container
        h2.title.title--md
          span(data-i18="video") Video
        .video-player
          +img("content", "video-player", "jpg", 1400, 705, "video preview")
          button(type="button" class="video-player__button")
            include ../../img/svg/icon-play.svg

    section.section.price#price
      .container
        h2.title.title--md
          span(data-i18="price") Price
        ul.price__list
          li.price__list-item
            .price-card
              h3.price-card__title Standard
              p.price-card__price.price-card__price--black 500 $
              ul.price-card__includes
                li.price-card__includes-item(data-i18="price-description-1-span-1") One location
                li.price-card__includes-item(data-i18="price-description-1-span-2") 120 photos in color
                li.price-card__includes-item(data-i18="price-description-1-span-3") 12 photos in retouch
                li.price-card__includes-item(data-i18="price-description-1-span-4") Readiness 2-3 weeks
                li.price-card__includes-item(data-i18="price-description-1-span-5") Make up, visage
              a(href="#" class="price-card__link button button--link waves-effect" data-i18="order") Order shooting
          li.price__list-item
            .price-card
              h3.price-card__title Premium
              p.price-card__price.price-card__price--black 700 $
              ul.price-card__includes
                li.price-card__includes-item(data-i18="price-description-2-span-1") One or two locations
                li.price-card__includes-item(data-i18="price-description-2-span-2") 200 photos in color
                li.price-card__includes-item(data-i18="price-description-2-span-3") 20 photos in retouch
                li.price-card__includes-item(data-i18="price-description-2-span-4") Readiness 1-2 weeks
                li.price-card__includes-item(data-i18="price-description-2-span-5") Make up, visage
              a(href="#" class="price-card__link button button--link waves-effect" data-i18="order") Order shooting
          li.price__list-item
            .price-card
              h3.price-card__title Gold
              p.price-card__price 1000 $
              ul.price-card__includes
                li.price-card__includes-item(data-i18="price-description-3-span-1") Three locations or more
                li.price-card__includes-item(data-i18="price-description-3-span-2") 300 photos in color
                li.price-card__includes-item(data-i18="price-description-3-span-3") 50 photos in retouch
                li.price-card__includes-item(data-i18="price-description-3-span-4") Readiness 1 week
                li.price-card__includes-item(data-i18="price-description-3-span-5") Make up, visage, hairstyle
              a(href="#" class="price-card__link button button--link waves-effect" data-i18="order") Order shooting

    section.contacts#contacts
      .contacts__img.contacts__img--dark
        +img("content", "contacts", "jpg", 1440, 700, "My photo")
      .contacts__img.contacts__img--light
        +img("content", "contacts-light", "jpg", 1440, 700, "My photo")
      .container
        .contacts__wrapper
          .contacts__form-wrapper
            h3.title(data-i18="contact-me") Contact me
            form.contacts__form(name="contacts_me" method="post" action="#")
              input(type="email" name="email" placeholder="E-mail")
              input(type="tel" name="tel" placeholder="Phone" data-i18="phone")
              textarea(cols="40" rows="3" name="message" placeholder="Message" data-i18="message")
              //- input(type="submit" class="button button--link waves-effect" value="Send message" data-i18="send-message")
              button(type="submit" class="button button--link waves-effect" data-i18="send-message") Send message


